{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
			"@": ["src"],
			"@/*": ["src/*"]
		}
  },
  "include": [
		"src/**/*.ts",
		"src/**/*.tsx",
		"src/**/**/*.tsx",
    "src/**/**/**/*.tsx",
    "src/**/**/**/**/*.tsx",
    "src/**/**/**/**/**/*.tsx",
		"src/**/*.vue",
		"src/**/**/*.vue",
		"src/**/**/**/*.vue",
		"src/**/**/**/**/*.vue",
		"src/**/**/**/**/**/*.vue",
    "src/**/**/**/**/**/**/*.vue",
		"src/**/*.d.ts",
		"src/main.js",
		"src/**/**/*.ts",
		"src/**/**/*.js",
		"src/**/**/**/*.js"
	],
  "references": [{ "path": "./tsconfig.node.json" }],
 
}
